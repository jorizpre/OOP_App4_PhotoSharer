<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            id: camera
            resolution: (640, 480)
            play: False
            size_hint_y: 0.8
            opacity: 0
        Button:
            text: 'Start Camera' if root.ids.camera.play == False else "Stop Camera"
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            size_hint_y: 0.1
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'

        Button:
            text: 'Capture'
            on_press: root.capture()
            size_hint_y: 0.1
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'


<ImageScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            id: img
            size_hint_y: 0.7
        Button:
            text: 'Create Sharable Link'
            size_hint_y: 0.1
        Label:
            text: ''
            size_hint_y: 0.1
        GridLayout:
            cols: 2
            size_hint_y: 0.1
            Button:
                text: 'Copy Link'
            Button:
                text: 'Open Link'


<RootWidget>:
    canvas.before:
        Color:
            rgba: (0.3,0.2,0.1,1)
        Rectangle:
            pos: self.pos
            size: self.size
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'